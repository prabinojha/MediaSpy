<!DOCTYPE html>
<html lang="en">
<%- include('includes/head', { title: 'Search Results' }) %>

    <head>
        <style>
            /* General layout for search results page */
            .search-results-container {
                margin: 20px;
                font-family: Arial, sans-serif;
            }

            .results-section {
                margin-bottom: 30px;
            }

            .results-section h2 {
                color: #333;
                margin-bottom: 10px;
                font-size: 1.5rem;
            }

            /* Styling for the list of results */
            .results-list {
                list-style-type: none;
                padding: 0;
            }

            .result-item {
                display: flex;
                margin-bottom: 20px;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 8px;
                transition: background-color 0.2s ease;
            }

            .result-item:hover {
                background-color: #f5f5f5;
            }

            /* Styling for the individual result details */
            .result-link {
                text-decoration: none;
                color: inherit;
                display: flex;
                width: 100%;
            }

            .result-image {
                width: 100px;
                height: 100px;
                object-fit: cover;
                margin-right: 20px;
                border-radius: 8px;
            }

            .result-info {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                flex-grow: 1;
            }

            .titleType {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 10px;
            }

            .title {
                font-size: 1.2rem;
                font-weight: bold;
                color: #333;
            }

            .suggestion-type {
                background-color: #f0f0f0;
                padding: 5px;
                border-radius: 5px;
                font-size: 0.9rem;
            }

            .rating {
                font-size: 1rem;
                margin-bottom: 5px;
            }

            p {
                font-size: 0.9rem;
                color: #666;
            }

            p strong {
                font-weight: bold;
            }

            /* Responsive design adjustments */
            @media (max-width: 768px) {
                .result-item {
                    flex-direction: column;
                    align-items: flex-start;
                }

                .result-image {
                    margin-right: 0;
                    margin-bottom: 10px;
                }
            }
        </style>
    </head>

    <body>
        <%- include('includes/header') %>

            <div class="search-results-container">
                <h1>Search Results for "<%= query %>"</h1>

                <div class="results-section">
                    <h2>Movies</h2>
                    <% if (movieResults.length> 0) { %>
                        <ul class="results-list">
                            <% movieResults.forEach(function(movie) { %>
                                <li class="result-item">
                                    <a href="/view-content/<%= movie.id %>" class="result-link">
                                        <img src="<%= movie.image_path || 'https://via.placeholder.com/100' %>"
                                            alt="<%= movie.name %>" class="result-image">
                                        <div class="result-info">
                                            <div class="titleType">
                                                <div class="title">
                                                    <%= movie.name %>
                                                </div>
                                                <div class="suggestion-type">
                                                    <%= movie.type %>
                                                </div>
                                            </div>
                                            <p class="rating"><strong>Rating:</strong>
                                                <%= movie.rating %>/5
                                            </p>
                                            <p><strong>Theme:</strong>
                                                <%= movie.theme %>
                                            </p>
                                            <p><strong>Company:</strong>
                                                <%= movie.company_name %>
                                            </p>
                                        </div>
                                    </a>
                                </li>
                                <% }) %>
                        </ul>
                        <% } else { %>
                            <p>No movies found.</p>
                            <% } %>
                </div>

                <div class="results-section">
                    <h2>Video Games</h2>
                    <% if (videoGameResults.length> 0) { %>
                        <ul class="results-list">
                            <% videoGameResults.forEach(function(game) { %>
                                <li class="result-item">
                                    <a href="/view-content/<%= game.id %>" class="result-link">
                                        <img src="<%= game.image_path || 'https://via.placeholder.com/100' %>"
                                            alt="<%= game.name %>" class="result-image">
                                        <div class="result-info">
                                            <div class="titleType">
                                                <div class="title">
                                                    <%= game.name %>
                                                </div>
                                                <div class="suggestion-type">
                                                    <%= game.type %>
                                                </div>
                                            </div>
                                            <p class="rating"><strong>Rating:</strong>
                                                <%= game.rating %>/5
                                            </p>
                                            <p><strong>Theme:</strong>
                                                <%= game.theme %>
                                            </p>
                                            <p><strong>Company:</strong>
                                                <%= game.company_name %>
                                            </p>
                                        </div>
                                    </a>
                                </li>
                                <% }) %>
                        </ul>
                        <% } else { %>
                            <p>No video games found.</p>
                            <% } %>
                </div>

            </div>


    </body>

</html>