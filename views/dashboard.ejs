<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
</head>
<body>
    <h1>Welcome, <%= username %>!</h1>
    <a href="/logout">Logout</a>

    <h2>Add a Review</h2>
    <form action="/reviews" method="POST">
        <input type="text" name="name" placeholder="Name of Movie or Video Game" required />
        <select name="type" required>
            <option value="movie">Movie</option>
            <option value="video_game">Video Game</option>
        </select>
        <textarea name="content" placeholder="Write your review here..." required></textarea>
        <input type="number" name="rating" min="1" max="5" placeholder="Rating (1-5)" required />
        <input type="text" name="company_name" placeholder="Company Name" required />
        <input type="text" name="theme" placeholder="Theme" required />
        <button type="submit">Submit Review</button>
    </form>

    <h2>Your Reviews</h2>
    <a href="/reviews">View all your reviews</a>

    <h2>Movie Reviews</h2>
    <% if (movieReviews.length > 0) { %>
        <ul>
            <% movieReviews.forEach(review => { %>
                <li>
                    <strong>Name:</strong> <%= review.name %><br />
                    <strong>Rating:</strong> <%= review.rating %>/5<br />
                    <strong>Company:</strong> <%= review.company_name %><br />
                    <strong>Theme:</strong> <%= review.theme %><br />
                    <strong>Content:</strong> <%= review.content %>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No movie reviews available.</p>
    <% } %>

    <h2>Video Game Reviews</h2>
    <% if (videoGameReviews.length > 0) { %>
        <ul>
            <% videoGameReviews.forEach(review => { %>
                <li>
                    <strong>Name:</strong> <%= review.name %><br />
                    <strong>Rating:</strong> <%= review.rating %>/5<br />
                    <strong>Company:</strong> <%= review.company_name %><br />
                    <strong>Theme:</strong> <%= review.theme %><br />
                    <strong>Content:</strong> <%= review.content %>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No video game reviews available.</p>
    <% } %>

</body>
</html>






    

    